@page "/RRegistro"
@rendermode InteractiveServer 
@inject PrioridadesBLL prioridadesBLL

<PageTitle>Registro de Prioridades</PageTitle>

<EditForm Model="prioridades" OnValidSubmit="Guardar">
	<DataAnnotationsValidator />

	<div class="container">
		<div class="card shadow-lg">
			<div class="card-header">
				<h3>Registro de Prioridades.</h3>
			</div>
			<div class="card-body">

                @*Registro de Prioridades*@
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xl-4">
					<label>Prioridad ID:</label>
					<div class="input-group mb-3">
						<InputNumber @bind-Value="prioridades.PrioridadID" class="form-control" aria-describedby="BotonBuscar"/>
                        <button @onclick="Buscar" class="btn btn-outline-primary" type="button" id="BotonBuscar"><i class="bi bi-search" /></button>
					</div>
				</div>
                
                @*Descripción*@
                <div class="mb-3">
                    <label class="form-label" for="Descripción:"> Descripción: </label>
                    <InputText @bind-Value="prioridades.Descripción" class="form-control"/>
                    <ValidationMessage For="@(() => prioridades.Descripción)" />
                </div>

                @*Registro de Dias*@
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xl-4">
                    <label>Dias Comprometidos:</label>
                    <div class="input-group mb-3">
                        <InputNumber @bind-Value="prioridades.DiasCompromiso" class="form-control" aria-describedby="BotonBuscar" />
                    </div>
                </div>
			</div>

            <div class="card-footer d-flex justify-content-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary" @onclick="Nuevo">Nuevo <i class="bi bi-file-earmark-plus" /></button>
                    <button type="submit" class="btn btn-outline-success">Guardar <i class="bi bi-floppy2-fill" /></button>
                    <button type="button" class="btn btn-outline-danger" @onclick="Eliminar">Eliminar <i class="bi bi-trash3" /></button>
                </div>
            </div>
    	</div>
	</div>
</EditForm>
<label>@Mensaje</label>


@code {
    [Parameter]

    public Prioridades prioridades { set; get; } = new Prioridades();

    public string Mensaje { get; set; } = string.Empty;

    bool _existe = false;

    public async Task Buscar()
    {
        var encontrado = await prioridadesBLL.FindAsync(prioridades.PrioridadID);
        if (encontrado != null)
            prioridades = encontrado;
        else
            Mensaje = "No se encontro la Prioridad";
    }

    public bool Validar()
    {
        _existe = prioridadesBLL.GetPrioridades(p => p.Descripción!.ToLower() == prioridades.Descripción!.ToLower()
        && p.PrioridadID != prioridades.PrioridadID).Any();
        return _existe;

    }

    void Guardar()
    {
        if (Validar())
        {
            Mensaje = "No Se Guardo Correctamente Por Descripción Repetida";
            return;
        }
        if(prioridadesBLL.Save(this.prioridades))
        {
            Mensaje = "Se Guardo Correctamente";
            return;
        }
    }

    public void Nuevo()
    {
        this.prioridades= new Prioridades();
        Mensaje = string.Empty;
    }

    public async Task Eliminar()
    {
        var eliminado = prioridadesBLL.Delete(prioridades.PrioridadID);
        if (eliminado)
        {
            Mensaje = "Se elimino correctamente.";
            Nuevo();
        }
        else
            Mensaje = "No se pudo eliminar.";
    }

}
